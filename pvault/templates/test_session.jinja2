{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1>
    Test Session page
  </h1>
  <p class="lead">
    <div>
      {{ counter }}
    </div>
    <div>
      <ul>
        {% for flash_message in request.session.pop_flash(queue='success') %}
        <li>{{ flash_message }}</li>
        {% endfor %}
      </ul>
    </div>
  </p>
</div>
{% endblock content %}